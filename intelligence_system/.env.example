# Copy to .env and fill with your actual keys

# ============================================
# API KEYS (Required)
# ============================================
OPENAI_API_KEY=sk-proj-...
MISTRAL_API_KEY=...
GEMINI_API_KEY=AIzaSy...
DEEPSEEK_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-api03-...
XAI_API_KEY=xai-...

# Optional: HuggingFace, GitHub
HUGGINGFACE_API_KEY=hf_...
GITHUB_TOKEN=github_pat_...

# ============================================
# Darwinacci Configuration
# ============================================
DARWINACCI_WORM_PATH=/root/intelligence_system/data/darwinacci_worm.csv
DARWINACCI_WORM_HEAD=/root/intelligence_system/data/darwinacci_worm_head.txt
DARWINACCI_TRIALS=3
DARWINACCI_CYCLES=5

# ============================================
# Observability
# ============================================
JSON_LOGS=0  # Set to 1 for structured JSON logging
PROMETHEUS_PORT=9108
METRICS_EXPORT_DIR=/root/intelligence_system/data/exports

# ============================================
# Database
# ============================================
DB_RETAIN_CYCLES=1000
DB_VACUUM_INTERVAL=100

# ============================================
# V7 Configuration
# ============================================
V7_REPLAY_BATCH=32
V7_REPLAY_STEPS=1

# ============================================
# Synergy Tuning
# ============================================
SYNERGY_MIN_GAIN=0.01
SYNERGY_REGRESSION_THRESH=-0.03
SYNERGY_NO_GAIN_MAX_STREAK=3

# ============================================
# API Behavior
# ============================================
# DeepSeek modes
DEEPSEEK_REASONER=0  # Set to 1 for reasoning mode
DEEPSEEK_STRICT=0    # Set to 1 for strict function calling

# Grok streaming
GROK_STREAM=0        # Set to 1 for streaming responses

# Smoke test
SMOKE_PROMPT="Responda OK."
SMOKE_MAX_TOKENS=12